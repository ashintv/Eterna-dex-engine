generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Orders {
    id            String   @id @default(uuid())
    tokenIn       String
    tokenOut      String
    amount        Float
    orderType     String
    status        String
    selectedDex   String?
    executedPrice Float?
    txHash        String?
    errorMessage  String?
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    @@index([status])
    @@index([createdAt])
}
